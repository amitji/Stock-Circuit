<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
                <TextView
                    android:id="@+id/asklabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textColor="@color/lightBrown"
                    android:text="Stocks Forecast"
                    android:textSize="17dip"
                    android:textStyle="italic"
                    android:typeface="sans"
                    android:editable="false" />
                <TextView
                    android:id="@+id/disclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/lightBrown"
                    android:text="@string/stock_forecast_list_disclaimer"
                    android:textSize="12dip"
                    android:textStyle="italic"
                    android:typeface="sans"
                    android:editable="false" />
        <!--
                <TextView
                    android:id="@+id/viewUnderLine1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-5dp"
                    android:layout_weight="1"
                    android:background="@drawable/underline" />
                    -->
      </LinearLayout>

      <EditText android:id="@+id/inputSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stockListView"
        android:textCursorDrawable="@drawable/color_cursor"
        android:hint="Search Stock..."
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp" />
      
        <ListView
        android:id="@+id/stockListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
